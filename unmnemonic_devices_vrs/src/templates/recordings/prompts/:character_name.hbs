<Response>
  <Say>
    Recording prompts for {{character_name}}
  </Say>
  <Gather timeout="2" input="speech" hints="{{#each prompt_names}}{{this}}, {{/each}}{{#if add_unrecorded}}unrecorded prompts{{/if}}">
    <Say>
      What prompt do you want to record? {{#if add_unrecorded}}Or say unrecorded prompts.{{/if}}
    </Say>
  </Gather>
</Response>
