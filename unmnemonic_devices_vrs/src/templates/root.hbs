<Response>
  {{#if begun}}
    {{#if ending}}
      <Say>
        It is ending
      </Say>
    {{else}}
      <Say>
        Has it begun?
      </Say>
    {{/if}}
  {{else}}
    {{#if down}}
      <Say>
        It is down
      </Say>
    {{else}}
      <Gather timeout="3" input="speech" hints="begun, jortle, tortle">
        {{{lookup prompts "pure.welcome"}}}
      </Gather>
      {{> restart }}
    {{/if}}
  {{/if}}
</Response>
