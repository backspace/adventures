<Response>
  {{{lookup prompts "pure.monitoring"}}}

  {{#if begun}}
    {{#if ending}}
      <Say>
        It is ending
      </Say>
    {{else}}
      <Say>
        Has it begun?
      </Say>
    {{/if}}
  {{else}}
    {{#if down}}
      <Say>
        It is down
      </Say>
    {{else}}
      <Gather timeout="2" input="speech" hints="begun, jortle, tortle">
        {{{lookup prompts "pure.welcome"}}}
      </Gather>
      <Say>
        We didn't hear anything. Goodbye.
      </Say>
    {{/if}}
  {{/if}}
</Response>