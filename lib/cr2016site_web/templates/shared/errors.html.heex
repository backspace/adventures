<% f = @f %>
<%= if @changeset.action do %>
  <div class="alert alert-danger">
    <p>Oops, something went wrong! Please check the errors below:</p>
    <ul class='errors'>
      <%= for {attr, message} <- f.errors do %>
        <li class='<%= attr %>'><%= humanize(attr) %> <%= translate_error(message) %></li>
      <% end %>
    </ul>
  </div>
<% end %>
