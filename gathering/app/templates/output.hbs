<div class='w-full'>
  <div class='mx-auto md:container'>
    <label>
      Debug?
      <Input @type='checkbox' @checked={{this.debug}} />
    </label>

    <header class='w-full gap-2 my-2 flex justify-between'>
      {{#each this.outputNames as |outputName|}}
        <button
          class='border-2 border-black p-2 flex-1 {{if (eq this.active outputName) "bg-gray-200"}}'
          type='button'
          {{on 'click' (fn (mut this.active) outputName)}}
        >
          {{outputName}}
        </button>
      {{/each}}
    </header>

    {{#if this.outputComponent}}
      <this.outputComponent
        @regions={{this.model.regions}}
        @destinations={{this.model.destinations}}
        @waypoints={{this.model.waypoints}}
        @teams={{this.model.teams}}
        @meetings={{this.model.meetings}}
        @assets={{this.model.assets}}
        @settings={{this.model.settings}}
        @debug={{this.debug}}
      />
    {{/if}}

  </div>
</div>