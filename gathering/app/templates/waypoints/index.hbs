<div class='row'>
  <div class='small-12 columns'>
    {{#if this.region}}
      <section data-test-waypoint-region-scope>
        <strong data-test-title>
          {{this.region.name}}
        </strong>
        <LinkTo
          class='underline'
          @route='waypoints'
          @query={{(hash regionId=null)}}
          data-test-leave
        >leave</LinkTo>
      </section>
    {{/if}}
    <table>
      <thead>
        <tr>
          {{#if (feature-flag 'destination-status')}}
            <th></th>
          {{/if}}
          <th class='p-2 text-left'>
            <button
              {{on 'click' this.toggleRegionSort}}
              class='px-1.5 border-2 border-black
                {{if (eq this.sorting "region") "text-white bg-black"}}'
              type='button'
              data-test-header-region
            >
              Region
            </button>
          </th>
          <th class='p-2 text-left'>
            Name
          </th>
          <th class='p-2 text-left'>
            Author
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each this.waypoints as |waypoint|}}
          <WaypointRow @waypoint={{waypoint}} />
        {{/each}}
      </tbody>
    </table>

    <LinkTo @route='waypoints.new' data-test-waypoints-new>
      New
    </LinkTo>
  </div>
</div>